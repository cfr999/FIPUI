<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainMenu"
    android:orientation="vertical"
    android:layout_width="1100dp"
    android:layout_height="700dp"
    android:layout_gravity="center">
    <ViewFlipper android:id="@+id/view_flipper_main_menu"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:persistentDrawingCache="animation"
                 android:flipInterval="500">
        <!-- 第一个页面 -->
       <include layout="@layout/source"></include>
        <!-- 第二个页面 -->
        <include layout="@layout/picture"></include>
        <!-- 第三个页面 -->
        <include layout="@layout/sound"></include>
        <!-- 第四个页面 -->
        <include layout="@layout/channel"></include>
        <!-- 第五个页面 -->
        <include layout="@layout/setting"></include>
    </ViewFlipper>
</LinearLayout>

